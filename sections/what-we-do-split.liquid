{% comment %}
  What We Do - Split layout with center badge
{% endcomment %}

<section class="wwd">
  <div class="wwd__wrap">
    <div class="wwd__grid">

      <!-- LEFT -->
      <div class="wwd__left">
        {% if section.settings.kicker != blank %}
          <div class="wwd__kicker">
            <span class="wwd__spark">✦</span>
            <span>{{ section.settings.kicker }}</span>
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="wwd__heading">{{ section.settings.heading }}</h2>
        {% endif %}

        <div class="wwd__cards">
          {% for block in section.blocks %}
            <div class="wwd__card" {{ block.shopify_attributes }}>
              {% if block.settings.icon != blank %}
                <div class="wwd__icon">{{ block.settings.icon }}</div>
              {% else %}
                <div class="wwd__icon wwd__icon--placeholder">★</div>
              {% endif %}

              {% if block.settings.title != blank %}
                <h3 class="wwd__cardTitle">{{ block.settings.title }}</h3>
              {% endif %}

              {% if block.settings.text != blank %}
                <p class="wwd__cardText">{{ block.settings.text }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>

        {% if section.settings.footer_text != blank %}
          <div class="wwd__footer">
            {{ section.settings.footer_text }}
            {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
              <a class="wwd__link" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <!-- RIGHT -->
      <div class="wwd__right">
        {% if section.settings.image != blank %}
          {{ section.settings.image | image_url: width: 1600 | image_tag: class: "wwd__img", loading: "lazy" }}
        {% else %}
          <div class="wwd__imgPlaceholder">Add an image</div>
        {% endif %}
      </div>

      <!-- CENTER BADGE -->
<a class="wwd__badge" href="{{ section.settings.badge_link | default: '#' }}">
  <svg class="wwd__badgeSvg" viewBox="0 0 120 120">
    <defs>
      <path
        id="badgePath"
        d="M60,60 m-46,0 a46,46 0 1,1 92,0 a46,46 0 1,1 -92,0"
      />
    </defs>

    <text class="wwd__badgeText">
      <textPath href="#badgePath">
        {{ section.settings.badge_text }}
      </textPath>
    </text>
  </svg>

  <span class="wwd__badgeCore">
    {{ section.settings.badge_icon | default: "✈" }}
  </span>
</a>


    </div>
  </div>
</section>

<style>
  .wwd{
    padding: 40px 16px;
  }
  .wwd__wrap{
    max-width: 1200px;
    margin: 0 auto;
  }
  .wwd__grid{
    position: relative;
    display: grid;
    grid-template-columns: 1fr 1fr;
    border-radius: 22px;
    overflow: hidden;
    min-height: 520px;
  }

  /* LEFT PANEL */
  .wwd__left{
    background: #173a53;
    color: #fff;
    padding: 44px 44px 38px;
  }
  .wwd__kicker{
    display:flex;
    gap:10px;
    align-items:center;
    font-weight: 700;
    letter-spacing: .12em;
    text-transform: uppercase;
    font-size: 12px;
    opacity: .9;
    margin-bottom: 14px;
  }
  .wwd__spark{ color: #f0b429; }

  .wwd__heading{
    font-size: clamp(28px, 3vw, 44px);
    line-height: 1.05;
    margin: 0 0 26px;
    font-weight: 800;
  }

  .wwd__cards{
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 18px;
    margin-top: 16px;
  }

  .wwd__card{
    background: rgba(255,255,255,.06);
    border: 1px solid rgba(255,255,255,.10);
    border-radius: 18px;
    padding: 18px 18px 16px;
    min-height: 150px;
  }
  .wwd__icon{
    width: 44px;
    height: 44px;
    display:flex;
    align-items:center;
    justify-content:center;
    border-radius: 12px;
    border: 1px solid rgba(240,180,41,.55);
    color: #f0b429;
    font-size: 18px;
    margin-bottom: 10px;
  }

  .wwd__cardTitle{
    margin: 0 0 6px;
    font-size: 16px;
    font-weight: 800;
  }
  .wwd__cardText{
    margin: 0;
    opacity: .88;
    font-size: 13px;
    line-height: 1.5;
  }

  .wwd__footer{
    margin-top: 22px;
    font-size: 13px;
    opacity: .9;
  }
  .wwd__link{
    color: #f0b429;
    font-weight: 800;
    text-decoration: underline;
    margin-left: 6px;
  }

  /* RIGHT PANEL */
  .wwd__right{
    background: #e9eef2;
    position: relative;
  }
  .wwd__img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    display:block;
  }
  .wwd__imgPlaceholder{
    height: 100%;
    display:flex;
    align-items:center;
    justify-content:center;
    color:#3b4a57;
    font-weight:700;
  }

  /* BADGE */
.wwd__badge{
  position:absolute;
  left:50%;
  top:60%;
  transform:translate(-50%,-50%);
  width:120px;
  height:120px;
  border-radius:50%;
  background:#173a53;
  box-shadow:0 14px 35px rgba(0,0,0,.25);
  display:flex;
  align-items:center;
  justify-content:center;
  text-decoration:none;
  z-index:5;
}

.wwd__badgeSvg{
  position:absolute;
  inset:0;
  animation: badgeSpin 12s linear infinite;
}

.wwd__badgeText{
  fill:#fff;
  font-size:9px;
  letter-spacing:3px;
  text-transform:uppercase;
}

.wwd__badgeCore{
  width:56px;
  height:56px;
  border-radius:50%;
  background:#f0b429;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size:22px;
  font-weight:700;
  color:#173a53;
  z-index:2;
}

@keyframes badgeSpin{
  from{ transform:rotate(0deg); }
  to{ transform:rotate(360deg); }
}

</style>

{% schema %}
{
  "name": "What we do + badge",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "WHAT WE DO" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Delivering dairy excellence from farm to home" },

    { "type": "image_picker", "id": "image", "label": "Right image" },

    { "type": "text", "id": "badge_text", "label": "Badge ring text", "default": "Contact us • Contact us • Contact us •" },
    { "type": "text", "id": "badge_icon", "label": "Badge center icon (emoji or text)", "default": "✈" },
    { "type": "url", "id": "badge_link", "label": "Badge link" },
    { "type": "text", "id": "badge_aria", "label": "Badge aria-label", "default": "Contact us" },

    { "type": "richtext", "id": "footer_text", "label": "Footer text", "default": "<p>Pure milk, trusted daily. Need help?</p>" },
    { "type": "text", "id": "cta_label", "label": "Footer link label", "default": "Contact Us Now." },
    { "type": "url", "id": "cta_link", "label": "Footer link" }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Service card",
      "settings": [
        { "type": "text", "id": "icon", "label": "Icon (emoji or text)", "default": "⚡" },
        { "type": "text", "id": "title", "label": "Title", "default": "Daily Fresh Milk Delivery" },
        { "type": "textarea", "id": "text", "label": "Text", "default": "Straight from our farm to your home, chilled and pure." }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "What we do + badge",
      "blocks": [
        { "type": "card" },
        { "type": "card" },
        { "type": "card" },
        { "type": "card" }
      ]
    }
  ]
}
{% endschema %}
