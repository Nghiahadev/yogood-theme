  <script>
    (function () {
      const root = document.getElementById('cc-icecream-1');
      if (!root) return;

      const carousel = root.querySelector('[data-cc-carousel]');
      const nextBtn = root.querySelector('.cc-next');
      const prevBtn = root.querySelector('.cc-prev');
      const items = Array.from(root.querySelectorAll('.item'));
      const countItem = items.length;

      let active = Math.min(1, countItem - 1);
      let other_1 = active - 1 < 0 ? countItem - 1 : active - 1;
      let other_2 = active + 1 >= countItem ? 0 : active + 1;

      let autoPlay = null;
      let isLocked = false;

      function resetAnimations() {
        items.forEach((el) => {
          const img = el.querySelector('.image img');
          const cap = el.querySelector('.image figcaption');
          if (!img || !cap) return;
          img.style.animation = 'none';
          cap.style.animation = 'none';
          void el.offsetWidth;
          img.style.animation = '';
          cap.style.animation = '';
        });
      }

      function applyClasses() {
        items.forEach((el) => el.classList.remove('active', 'other_1', 'other_2'));
        items[active].classList.add('active');
        items[other_1].classList.add('other_1');
        items[other_2].classList.add('other_2');
      }

      function changeSlider() {
        resetAnimations();
        applyClasses();
        if (autoPlay) clearInterval(autoPlay);
        autoPlay = setInterval(() => nextBtn.click(), 5000);
      }

      function goNext() {
        if (isLocked) return;
        isLocked = true;

        carousel.classList.remove('prev');
        carousel.classList.add('next');

        active = active + 1 >= countItem ? 0 : active + 1;
        other_1 = active - 1 < 0 ? countItem - 1 : active - 1;
        other_2 = active + 1 >= countItem ? 0 : active + 1;

        changeSlider();
        setTimeout(() => (isLocked = false), 520);
      }

      function goPrev() {
        if (isLocked) return;
        isLocked = true;

        carousel.classList.remove('next');
        carousel.classList.add('prev');

        active = active - 1 < 0 ? countItem - 1 : active - 1;
        other_1 = active + 1 >= countItem ? 0 : active + 1;
        other_2 = other_1 + 1 >= countItem ? 0 : other_1 + 1;

        changeSlider();
        setTimeout(() => (isLocked = false), 520);
      }

      nextBtn.addEventListener('click', goNext);
      prevBtn.addEventListener('click', goPrev);

      // pause on hover (nice for Shopify pages)
      carousel.addEventListener('mouseenter', () => autoPlay && clearInterval(autoPlay));
      carousel.addEventListener('mouseleave', () => (autoPlay = setInterval(goNext, 5000)));

      // init
      applyClasses();
      autoPlay = setInterval(goNext, 5000);
    })();
  </script>
