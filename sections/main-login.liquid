{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* ==========================================
     BRAND COLORS
     Main = #173a53
  ========================================== */
  .customer-login-unique {
    --brand: #173a53;
    --brand2: #1f4b6a;
    --ring: rgba(23, 58, 83, 0.25);
  }

  .customer-login-unique * {
    font-family: 'Montserrat', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    box-sizing: border-box;
  }

  .customer-login-unique {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .customer-login-unique h1 {
    font-weight: bold;
    margin: 0;
  }

  .customer-login-unique p {
    font-size: 14px;
    font-weight: 100;
    line-height: 20px;
    letter-spacing: 0.5px;
    margin: 20px 0 30px;
  }

  .customer-login-unique a {
    color: var(--brand);
    font-size: 14px;
    text-decoration: none;
    margin: 12px 0;
  }
  .customer-login-unique a:hover { text-decoration: underline; }

  .customer-login-unique button {
    border-radius: 20px;
    border: 1px solid var(--brand);
    background-color: var(--brand);
    color: #FFFFFF;
    font-size: 12px;
    font-weight: bold;
    padding: 12px 45px;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: transform 80ms ease-in, background-color 160ms ease, border-color 160ms ease, box-shadow 160ms ease;
    cursor: pointer;
  }

  .customer-login-unique button:hover {
    background-color: var(--brand2);
    border-color: var(--brand2);
    box-shadow: 0 10px 24px var(--ring);
  }

  .customer-login-unique button:active { transform: scale(0.95); }

  .customer-login-unique button:focus-visible {
    outline: none;
    box-shadow: 0 0 0 4px var(--ring);
  }

  .customer-login-unique button.ghost {
    background-color: transparent;
    border-color: #FFFFFF;
    color: #FFFFFF;
  }

  .customer-login-unique button.ghost:hover {
    background-color: rgba(255,255,255,0.12);
    border-color: #FFFFFF;
    box-shadow: none;
  }

  .customer-login-unique form {
    background-color: #FFFFFF;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0 50px;
    height: 100%;
    text-align: center;
  }

  .customer-login-unique input {
    background-color: #eee;
    border: 1px solid transparent;
    border-radius: 10px;
    padding: 12px 15px;
    margin: 8px 0;
    width: 100%;
    transition: border-color 160ms ease, box-shadow 160ms ease, background-color 160ms ease;
  }

  .customer-login-unique input:focus {
    outline: none;
    border-color: rgba(23, 58, 83, 0.35);
    box-shadow: 0 0 0 4px var(--ring);
    background-color: #fff;
  }

  .customer-login-unique .container {
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 14px 28px rgba(0,0,0,0.25),
                0 10px 10px rgba(0,0,0,0.22);
    position: relative;
    overflow: hidden;
    width: 768px;
    max-width: 100%;
    min-height: 480px;
  }

  .customer-login-unique .form-container {
    position: absolute;
    top: 0;
    height: 100%;
    transition: all 0.6s ease-in-out;
  }

  .customer-login-unique .sign-in-container {
    left: 0;
    width: 50%;
    z-index: 2;
  }

  .customer-login-unique .container.right-panel-active .sign-in-container {
    transform: translateX(100%);
  }

  .customer-login-unique .sign-up-container {
    left: 0;
    width: 50%;
    opacity: 0;
    z-index: 1;
  }

  .customer-login-unique .container.right-panel-active .sign-up-container {
    transform: translateX(100%);
    opacity: 1;
    z-index: 5;
    animation: show 0.6s;
  }

  @keyframes show {
    0%, 49.99% { opacity: 0; z-index: 1; }
    50%, 100% { opacity: 1; z-index: 5; }
  }

  .customer-login-unique .overlay-container {
    position: absolute;
    top: 0;
    left: 50%;
    width: 50%;
    height: 100%;
    overflow: hidden;
    transition: transform 0.6s ease-in-out;
  }

  .customer-login-unique .container.right-panel-active .overlay-container{
    transform: translateX(-100%);
  }

  .customer-login-unique .overlay {
    background: var(--brand);
    background: linear-gradient(to right, var(--brand), var(--brand2));
    background-repeat: no-repeat;
    background-size: cover;
    background-position: 0 0;
    color: #FFFFFF;
    position: relative;
    left: -100%;
    height: 100%;
    width: 200%;
    transform: translateX(0);
    transition: transform 0.6s ease-in-out;
  }

  .customer-login-unique .container.right-panel-active .overlay {
    transform: translateX(50%);
  }

  .customer-login-unique .overlay-panel {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0 40px;
    text-align: center;
    top: 0;
    height: 100%;
    width: 50%;
    transform: translateX(0);
    transition: transform 0.6s ease-in-out;
  }

  .customer-login-unique .overlay-left { transform: translateX(-20%); }
  .customer-login-unique .container.right-panel-active .overlay-left { transform: translateX(0); }

  .customer-login-unique .overlay-right { right: 0; transform: translateX(0); }
  .customer-login-unique .container.right-panel-active .overlay-right { transform: translateX(20%); }

  /* Recover password toggle */
  .customer-login-unique .recover-wrap { display: none; width: 100%; }
  .customer-login-unique .login-wrap { display: block; width: 100%; }
  .customer-login-unique .sign-in-container.is-recover .login-wrap { display: none; }
  .customer-login-unique .sign-in-container.is-recover .recover-wrap { display: block; }

  .customer-login-unique .recover-note {
    color: rgba(0,0,0,0.65);
    font-size: 13px;
    margin: 10px 0 14px;
  }

  /* Mobile should slide like desktop */
  @media screen and (max-width: 750px) {
    .customer-login-unique .container {
      width: 92vw;
      min-height: 520px;
    }
    .customer-login-unique form { padding: 0 22px; }
    .customer-login-unique .overlay-panel { padding: 0 18px; }

    .customer-login-unique h1 { font-size: 22px; }
    .customer-login-unique p { font-size: 13px; margin: 12px 0 16px; }
    .customer-login-unique button { padding: 12px 28px; }

    /* hide old mobile swap text (we use slide buttons) */
    .mobile-swap { display: none !important; }
  }

  .padding-bottom { padding-bottom: 10px; }
{%- endstyle -%}

<div class="customer-login-unique section-{{ section.id }}-padding">
  <div class="container" id="container">
    <!-- SIGN UP -->
    <div class="form-container sign-up-container">
      {%- form 'create_customer' -%}
        {{ form.errors | default_errors }}
        <h1 class="padding-bottom">Create Account</h1>

        <input
          name="customer[first_name]"
          id="FirstName"
          type="text"
          placeholder="First name"
          autocomplete="given-name"
        >
        <input name="customer[last_name]" id="LastName" type="text" placeholder="Last name" autocomplete="family-name">
        <input name="customer[email]" id="Email" type="email" placeholder="Email" autocomplete="email">
        <input
          name="customer[password]"
          id="CreatePassword"
          type="password"
          placeholder="Password"
          autocomplete="new-password"
        >

        <button type="submit">Sign Up</button>

        <div>
          <p class="mobile-swap">or sign in <span class="mobile-swap-button" id="mobile-swap">here</span></p>
        </div>
      {%- endform -%}
    </div>

    <!-- SIGN IN + RECOVER -->
    <div class="form-container sign-in-container" id="signInContainer">
      <!-- LOGIN FORM -->
      <div class="login-wrap" id="loginWrap">
        {%- form 'customer_login', novalidate: 'novalidate' -%}
          <h1 class="padding-bottom">Sign in</h1>
          {{ form.errors | default_errors }}

          <input name="customer[email]" id="CustomerEmail" type="email" placeholder="Email" autocomplete="email">
          <input
            name="customer[password]"
            id="CustomerPassword"
            type="password"
            placeholder="Password"
            autocomplete="current-password"
          >

          <a href="#recover" id="ForgotPasswordLink">Forgot your password?</a>

          <button type="submit">Sign In</button>

          <div>
            <p class="mobile-swap">or sign up <span class="mobile-swap-button" id="mobile-swap-2">here</span></p>
          </div>
        {%- endform -%}
      </div>

      <!-- RECOVER FORM -->
      <div class="recover-wrap" id="recoverWrap">
        {%- form 'recover_customer_password' -%}
          <h1 class="padding-bottom">Reset password</h1>
          {{ form.errors | default_errors }}

          <p class="recover-note">Enter your email and weâ€™ll send you a reset link.</p>

          <input
            type="email"
            name="email"
            id="RecoverEmail"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            placeholder="Email"
            required
          >

          <button type="submit">Send reset link</button>

          <a href="#login" id="BackToLoginLink">Back to sign in</a>
        {%- endform -%}
      </div>
    </div>

    <!-- OVERLAY -->
    <div class="overlay-container">
      <div class="overlay">
        <div class="overlay-panel overlay-left">
          <h1>Welcome Back!</h1>
          <p>To see your account dashboard and information, please login.</p>
          <button class="ghost" id="signIn" type="button">Sign In</button>
        </div>

        <div class="overlay-panel overlay-right">
          <h1>Hello, Friend!</h1>
          <p>Simply create an account to gain access to exclusive member only perks!</p>
          <button class="ghost" id="signUp" type="button">Sign Up</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');

    const signInContainer = document.getElementById('signInContainer');
    const forgotLink = document.getElementById('ForgotPasswordLink');
    const backLink = document.getElementById('BackToLoginLink');

    // Slide (desktop + mobile)
    if (signUpButton) {
      signUpButton.addEventListener('click', () => {
        container.classList.add('right-panel-active');
      });
    }
    if (signInButton) {
      signInButton.addEventListener('click', () => {
        container.classList.remove('right-panel-active');
      });
    }

    // Recover toggle
    function showRecover() {
      if (signInContainer) signInContainer.classList.add('is-recover');
    }
    function showLogin() {
      if (signInContainer) signInContainer.classList.remove('is-recover');
    }

    if (forgotLink) {
      forgotLink.addEventListener('click', (e) => {
        e.preventDefault();
        history.replaceState(null, '', '#recover');
        showRecover();
      });
    }

    if (backLink) {
      backLink.addEventListener('click', (e) => {
        e.preventDefault();
        history.replaceState(null, '', '#login');
        showLogin();
      });
    }

    // Auto-open recover if URL has #recover
    if (window.location.hash === '#recover') {
      showRecover();
    }
  });
</script>

